{
  "name": "@hkube/datasource-repository",
  "version": "1.0.0",
  "description": "datasource repository",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "NODE_ENV=test ./node_modules/mocha/bin/_mocha tests --colors --recursive --exit",
    "test:cov": "NODE_ENV=test ./node_modules/nyc/bin/nyc.js --reporter=html --reporter=text --reporter=lcov npm run test",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "npm publish"
  },
  "pre-commit": {
    "run": [
      "lint",
      "test"
    ]
  },
  "keywords": [
    "datasource",
    "hkube"
  ],
  "author": "Hkube",
  "license": "MIT",
  "dependencies": {
    "@hkube/storage-manager": "^2.0.33",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "js-yaml": "^4.0.0",
    "simple-git": "^2.31.0"
  },
  "devDependencies": {
    "@types/chai-as-promised": "^7.1.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.13",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^31.3.3",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^7.1.1",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "prettier-plugin-jsdoc": "^0.3.7"
  }
}
